<Window x:Class="photomaton_wpf.TransparentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:photomaton_wpf"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ShowActivated="false"
        Title="TransparentWindow" Height="300" Width="300">
    <Grid>
        <Label x:Name="lbl" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Printing in progress" FontSize="250" Foreground="Green"/>
    </Grid>
</Window>
